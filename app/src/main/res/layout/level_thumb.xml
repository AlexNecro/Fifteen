<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/puzzle"
            android:id="@+id/grid_puzzle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/revolve"
            android:id="@+id/grid_revolve" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/swap"
            android:id="@+id/grid_swap" />

        <ImageView
            android:id="@+id/grid_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lock">
        </ImageView>
    </RelativeLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_score"
        style="@style/LevelStarsBar"
        android:numStars="3"
        android:layout_gravity="center_vertical|center_horizontal"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/grid_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:gravity="center"
        android:text="hjkhjhkjh">
    </TextView>
</LinearLayout>